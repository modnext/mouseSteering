  <!-- Control Tuning -->
  <sensitivity>1.000000</sensitivity>
  <invertXAxis>false</invertXAxis>
  <speedBasedSteering>false</speedBasedSteering>
  <linearity>1.000000</linearity>
  <smoothness>0.000000</smoothness>

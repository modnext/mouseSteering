    <e k="mouseSteering_ui_modeSettingsLabel" v="Settings for:"/>
    <e k="mouseSteering_ui_singleplayer" v="Singleplayer (host)"/>
    <e k="mouseSteering_ui_multiplayer" v="Multiplayer (client)"/>

